<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/service-definition-2.1.xsd">

    <service verb="get" noun="ChatRoom">
        <description>when roomId is null get a list of rooms, otherise a single room with members and messages</description>
        <in-parameters>
            <parameter name="chatRoomId"/>
            <parameter name="start" type="Integer" default-value="0"/>
            <parameter name="limit" type="Integer" default-value="20"/>
            <parameter name="search" default="null"/>
        </in-parameters>
        <out-parameters>
            <parameter name="chatRooms" type="List"/>
        </out-parameters>
        <actions>
            <service-call out-map="context"
                name="growerp.100.GeneralServices100.get#RelatedCompanyAndOwner"/>
            <entity-find entity-name="growerp.general.ActiveChatRoomsAndMembers"
                     list="rooms" offset="start" limit="limit">
                <econdition field-name="chatRoomId" from="chatRoomId"
                    ignore-if-empty="true"/>
                <econdition field-name="ownerPartyId"/>
                <order-by field-name="chatRoomId"/>
            </entity-find>
            <set field="chatRooms" from="[]"/>
            <set field="members" from="[]"/>
            <set field="lastItem" from="null"/>
            <iterate list="rooms" entry="room">
                <if condition="lastItem &amp;&amp; lastItem.chatRoomId != room.chatRoomId">
                    <set field="roomOut.members" from="members"/>
                    <script>chatRooms.add(roomOut)</script>
                    <set field="members" from="[]"/>
                </if>
                <set field="roomOut" from="[
                    chatRoomId: room.chatRoomId,
                    chatRoomName: room.chatRoomName,
                    isPrivat: room.isPrivate ? room.isPrivate.toString() : 'true']"/>
                <if condition="room.userId != ec.user.userAccount.userId">
                    <service-call name="growerp.100.PartyServices100.get#User"
                        in-map="[userPartyId: room.partyId]" out-map="context"/>
                    <else>
                        <set field="user" from="[partyId: room.partyId]"/>
                    </else>
                </if>
                <set field="chatRoomMember" from="[
                        member: user, 
                        hasRead: room.hasRead ? room.hasRead.toString() : 'false',
                        isActive: room.isActive ? room.isActive.toString() : 'true']"/>
                <script>members.add(chatRoomMember)</script>
                <set field="lastItem" from="room"/>
            </iterate>
            <if condition="lastItem">
                <set field="roomOut.members" from="members"/>
                <script>chatRooms.add(roomOut)</script>
            </if>
            <log message="=====chatrooms: ${chatRooms}"/>
        </actions>
    </service>

    <service verb="create" noun="ChatRoom">
        <in-parameters>
            <parameter name="chatRoom"/>
        </in-parameters>
        <out-parameters>
            <parameter name="chatRoom"/>
        </out-parameters>
        <actions>
            <script> // convert JSON data
                Object chatRoomIn = new groovy.json.JsonSlurper().parseText(chatRoom).chatRoom</script>
            <service-call out-map="context"
                 name="growerp.100.GeneralServices100.get#RelatedCompanyAndOwner"/>
            <service-call name="create#growerp.general.ChatRoom" out-map="context"
                 in-map="[chatRoomName: chatRoomIn.chatRoomName,
                            ownerPartyId: ownerPartyId,
                    isPrivate: chatRoomIn.isPrivate == 'true' ? 'Y' : 'N']"/>
            <!-- add members -->
            <iterate list="chatRoomIn.members" entry="memberIn">
                <service-call name="create#growerp.general.ChatRoomMember"
                    in-map="[chatRoomId: chatRoomId,
                            isActive: memberIn.isActive == 'true' ? 'Y' : 'N',
                            hasRead: memberIn.hasRead == 'true' ? 'Y' : 'N',
                            userId: memberIn.member.userId]"/>
            </iterate>
            <!-- add the initiator -->
            <service-call name="create#growerp.general.ChatRoomMember"
                in-map="[chatRoomId: chatRoomId,
                        isActive: 'Y',
                        hasRead: 'Y',
                        userId: ec.user.userAccount.userId]"/>
            <!-- read everything for verification -->
            <service-call name="growerp.100.ChatServices100.get#ChatRoom"
                in-map="[chatRoomId: chatRoomId]" out-map="context"/>
            <set field="chatRoom" from="chatRooms[0]"/>
        </actions>
    </service>

    <service verb="update" noun="ChatRoom">
        <in-parameters>
            <parameter name="chatRoomId" required="true"/>
            <parameter name="chatRoomName" required="true"/>
            <parameter name="userId" required="true"/>
        </in-parameters>
        <out-parameters>
            <parameter name="chatRoom"/>
        </out-parameters>
        <actions>
        </actions>
    </service>

    <service verb="delete" noun="ChatRoom">
        <in-parameters>
            <parameter name="chatRoomId" required="true"/>
        </in-parameters>
        <out-parameters>
            <parameter name="chatRoomId"/>
        </out-parameters>
        <actions>
        </actions>
    </service>

    <service verb="get" noun="ChatMessage">
        <in-parameters>
            <parameter name="chatRoomId"/>
            <parameter name="chatMessageId"/>
            <parameter name="start" type="Integer" default-value="0"/>
            <parameter name="limit" type="Integer" default-value="20"/>
            <parameter name="search" default="null"/>
        </in-parameters>
        <out-parameters>
            <parameter name="chatMessages" type="List"/>
        </out-parameters>
        <actions>
            <service-call out-map="context"
                name="growerp.100.GeneralServices100.get#RelatedCompanyAndOwner"/>
                <log message="===start $chatRoomId  $chatMessageId $ownerPartyId"/>
                <entity-find entity-name="growerp.general.ChatRoomAndMessages"
                     list="messages" offset="start" limit="limit">
                <econdition field-name="chatRoomId" from="chatRoomId"
                    ignore-if-empty="true"/>
                <econdition field-name="chatMessageId" from="chatMessageId"
                    ignore-if-empty="true"/>
                  <econdition field-name="ownerPartyId"/>
            </entity-find>
            <set field="chatMessages"  from="[]"/>
            <iterate list="messages" entry="message">
                <set field="chatMessage" from="[
                    chatMessageId : message.chatMessageId,
                    fromUserId: message.fromUserId,
                    isRead: message.isRead == 'Y'? 'true' : 'false',
                    content: message.content,
                    creationDate: message.lastUpdatedStamp.toString().substring(0,19) + 'Z',
                    ]"/>
                <script>chatMessages.add(chatMessage)</script>
            </iterate>
            <log message="=====chatmessages ${chatMessages.size()}"/>
        </actions>
    </service>

    <service verb="create" noun="ChatMessage">
        <in-parameters>
            <parameter name="chatRoomId" required="true"/>
            <parameter name="message" required="true"/>
        </in-parameters>
        <out-parameters>
            <parameter name="chatMessage"/>
        </out-parameters>
        <actions>
            <service-call name="create#growerp.general.ChatMessage"
            in-map="[chatRoomId: chatRoomId,
                    fromUserId : ec.user.userAccount.userId,
                    isRead: 'N',
                    content: message]"/>
            <!-- read everything for verification -->
            <service-call name="growerp.100.ChatServices100.get#ChatMessage"
                in-map="[chatMessageId: chatMessageId]" out-map="context"/>
            <set field="chatMessage" from="chatMessages[0]"/>
        </actions>
    </service>
</services>