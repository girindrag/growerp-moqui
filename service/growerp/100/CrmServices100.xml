<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/service-definition-2.1.xsd">

    <service verb="get" noun="Opportunity">
        <in-parameters>
            <parameter name="opportunityId"/>
            <parameter name="start" type="Integer" default-value="0"/>
            <parameter name="limit" type="Integer" default-value="20"/>
            <parameter name="my" default-value="true" type="Boolean"/>
            <parameter name="search" default="null"/>
        </in-parameters>
        <out-parameters>
            <parameter name="opportunities" type="List"/>
            <parameter name="opportunity" type="Map"/>
        </out-parameters>
        <actions>
            <service-call out-map="context"
                name="growerp.100.GeneralServices100.get#RelatedCompanyAndOwner"/>
            <if condition="my == true &amp;&amp; !opportunityId">
                <set field="accountPartyId" from="ec.user.userAccount.partyId"/></if>
            <if condition="search != null">
                <set field="search" value="%${search}%"/></if>
            <if condition="!opportunityId">
                <set field="notDisplayStatus" from="['Deleted']"/></if>
            <entity-find list="opps" offset="start" limit="limit"
                    entity-name="growerp.crm.OpportunityAndParties">
                <econdition field-name="ownerPartyId" ignore-if-empty="true"/>
                <econdition field-name="opportunityId" ignore-if-empty="true"/>
                <econdition field-name="accountPartyId" ignore-if-empty="true"/>
                <econdition field-name="stageId" operator="not-in"
                     from="notDisplayStatus" ignore-if-empty="true"/>
                <econditions combine="or">
                    <econdition field-name="opportunityId" ignore-case="true"
                        operator="like" from="search" ignore-if-empty="true"/>
                    <econdition field-name="opportunityName" ignore-case="true"
                        operator="like" from="search" ignore-if-empty="true"/>
                    <econdition field-name="description" ignore-case="true"
                        operator="like" from="search" ignore-if-empty="true"/>
                    </econditions>
                    <order-by field-name="lastUpdatedStamp"/>
            </entity-find>
            <if condition="!opportunityId">
                <set field="opportunities" from="[]"/></if>
            <iterate list="opps" entry="opp">
                <service-call name="growerp.100.PartyServices100.get#User"
                    in-map="[userPartyId: opp.accountPartyId]" out-map="employee"/>
                <service-call name="growerp.100.PartyServices100.get#User"
                    in-map="[userPartyId: opp.leadPartyId]" out-map="lead"/>
                <set field="opOut" from="[
                    opportunityId: opp.opportunityId,
                    lastUpdated: opp.lastUpdatedStamp
                        ? opp.lastUpdatedStamp.toString() + 'z'
                        : null,
                    opportunityName: opp.opportunityName,
                    stageId: opp.stageId,
                    description: opp.description,
                    nextStep: opp.nextStep,
                    estAmount: opp.estAmount?.toString(),
                    estProbability: opp.estProbability?.toString(),
                    employeeUser: employee.user,
                    leadUser: lead.user]"/>
                <if condition="!opportunityId">
                    <script>opportunities.add(opOut)</script>
                    <else>
                        <set field="opportunity" from="opOut"/>
                    </else></if>
            </iterate>
        </actions>
    </service>
    <service verb="create" noun="Opportunity">
        <description> Create a Opportunity with a price in a category</description>
        <in-parameters>
            <parameter name="opportunity" required="true"/>
        </in-parameters>
        <out-parameters>
            <parameter name="opportunity"/>
        </out-parameters>
        <actions>
            <script> // convert JSON data
                Object opportunityIn = new groovy.json.JsonSlurper()
                    .parseText(opportunity).opportunity</script>
            <if condition="!opportunityIn.stageId">
                <entity-find list="stages"
                    entity-name="mantle.sales.opportunity.SalesOpportunityStage">
                    <order-by field-name="sequenceNum"/></entity-find>
                <set field="opportunityIn.stageId" from="stages[0].opportunityStageId"/>
            </if>
            <service-call out-map="context" in-map="[wantOwner: true]"
                name="growerp.100.GeneralServices100.get#RelatedCompanyAndOwner"/>
            <service-call name="create#mantle.sales.opportunity.SalesOpportunity"
                in-map="[estimatedAmount: opportunityIn.estAmount,
                        opportunityName: opportunityIn.opportunityName,
                        description: opportunityIn.description,
                        estimatedProbability: opportunityIn.estProbability,
                        ownerPartyId: ownerPartyId,
                        nextStep: opportunityIn.nextStep,
                        opportunityStageId: opportunityIn.stageId,
                        accountPartyId: opportunityIn.employeeUser
                            ? opportunityIn.employeeUser.partyId
                            : ec.user.userAccount.partyId,
                        ]" out-map="context"/>
            <if condition="opportunityIn.leadUser">
                <service-call 
                    name="create#mantle.sales.opportunity.SalesOpportunityParty"
                    in-map="[salesOpportunityId: salesOpportunityId,
                        partyId: opportunityIn.leadUser.partyId,
                        roleTypeId: 'Customer',
                        fromDate: ec.user.nowTimestamp]" out-map="context"/></if>
            <service-call name="growerp.100.CrmServices100.get#Opportunity"
                in-map="[opportunityId: salesOpportunityId]" out-map="context"/>
        </actions>
    </service>

    <service verb="update" noun="Opportunity">
        <description> Update an existing Opportunity</description>
        <in-parameters>
            <parameter name="opportunity" required="true"/>
        </in-parameters>
        <out-parameters>
            <parameter name="opportunity"/>
        </out-parameters>
        <actions>
            <script> // convert JSON data
                Object opportunityIn = new groovy.json.JsonSlurper().parseText(opportunity).opportunity</script>
            <service-call out-map="context"
                name="growerp.100.GeneralServices100.get#RelatedCompanyAndOwner"/>
            <entity-find list="opps" for-update="true" limit="1"
                    entity-name="mantle.sales.opportunity.SalesOpportunity">
                <econdition field-name="salesOpportunityId" from="opportunityIn.opportunityId"/>
                <econdition field-name="ownerPartyId" ignore-if-empty="true"/></entity-find>
            <set field="oldValue" from="opps[0]"/>
            <if condition="!oldValue"><return error="true"
                    message="opportunity ${opportunityIn.opportunityId} not found!}"/></if>
            <set field="update" value="false"/>
            <if condition="oldValue.opportunityName != opportunityIn.opportunityName">
                <set field="oldValue.opportunityName" from="opportunityIn.opportunityName"/>
                <set field="update" value="true"/></if>
            <if condition="oldValue.estimatedAmount != opportunityIn.estAmount">
                <set field="oldValue.estimatedAmount" from="opportunityIn.estAmount"/>
                <set field="update" value="true"/></if>
            <if condition="oldValue.estimatedProbability != opportunityIn.estProbability">
                <set field="oldValue.estimatedProbability" from="opportunityIn.estProbability"/>
                <set field="update" value="true"/></if>
            <if condition="oldValue.accountPartyId != opportunityIn.employeeUser?.partyId">
                <set field="oldValue.accountPartyId" from="opportunityIn.employeeUser?.partyId"/>
                <set field="update" value="true"/></if>
            <if condition="oldValue.description != opportunityIn.description">
                <set field="oldValue.description" from="opportunityIn.description"/>
                <set field="update" value="true"/></if>
            <if condition="oldValue.nextStep != opportunityIn.nextStep">
                <set field="oldValue.nextStep" from="opportunityIn.nextStep"/>
                <set field="update" value="true"/></if>
            <if condition="oldValue.opportunityStageId != opportunityIn.stageId">
                <set field="oldValue.opportunityStageId" from="opportunityIn.stageId"/>
                <set field="update" value="true"/></if>
            <if condition="update == 'true'">                        
                <entity-update value-field="oldValue"/></if>
            <entity-find list="oldValues"
                entity-name="mantle.sales.opportunity.SalesOpportunityParty" for-update="true">
                <econdition field-name="salesOpportunityId" from="opportunityIn.opportunityId"/>
                <econdition field-name="roleTypeId" value="Customer"/>
                <date-filter/></entity-find>
            <if condition="!oldValues &amp;&amp; opportunityIn.leadUser">
                <service-call name="create#mantle.sales.opportunity.SalesOpportunityParty"
                in-map="[salesOpportunityId: opportunityIn.opportunityId,
                    partyId: opportunityIn.leadUser?.partyId,
                    roleTypeId: 'Customer',
                    fromDate: ec.user.nowTimestamp]" out-map="context"/>
            </if>
            <if condition="oldValues">
                <if condition="oldValues[0].partyId != opportunityIn.leadUser?.partyId">
                    <set field="oldValues[0].thruDate" from="ec.user.nowTimestamp"/>
                    <entity-update value-field="oldValues[0]"/>
                    <service-call name="create#mantle.sales.opportunity.SalesOpportunityParty"
                        in-map="[salesOpportunityId: opportunityIn.opportunityId,
                            partyId: opportunityIn.leadUser?.partyId,
                            roleTypeId: 'Customer',
                            fromDate: ec.user.nowTimestamp]"/>
                </if>
                <else>
                    <if condition="opportunityIn.leadUser">
                        <service-call name="create#mantle.sales.opportunity.SalesOpportunityParty"
                            in-map="[salesOpportunityId: opportunityIn.opportunityId,
                                partyId: opportunityIn.leadUser.partyId,
                                roleTypeId: 'Customer',
                                fromDate: ec.user.nowTimestamp]" out-map="context"/>
                    </if>
                </else>
            </if>
            <set field="opportunity" from="[:]" type="NewMap"/>
            <service-call name="growerp.100.CrmServices100.get#Opportunity"
                in-map="[opportunityId: opportunityIn.opportunityId]" out-map="context"/>
            </actions>
    </service>

    <service verb="delete" noun="Opportunity">
        <description> Delete a Opportunity </description>
        <in-parameters>
            <parameter name="opportunity" required="true"/>
        </in-parameters>
        <out-parameters>
            <parameter name="opportunity"/>
        </out-parameters>
        <actions>
            <script> // convert JSON data
                Object opportunityIn = new groovy.json.JsonSlurper().parseText(opportunity).opportunity</script>
            <service-call out-map="context"
                name="growerp.100.GeneralServices100.get#RelatedCompanyAndOwner"/>
            <!-- make sure it exists -->
            <entity-find list="oldValues" limit="1" for-update="true"
                    entity-name="mantle.sales.opportunity.SalesOpportunity">
                <econdition field-name="salesOpportunityId" from="opportunityIn.opportunityId"/>
                <econdition field-name="ownerPartyId" ignore-if-empty="true"/></entity-find>
            <if condition="!oldValues"><return error="true"
                message="Opportunity: ${opportunityIn.opportunityId} not found"/></if>
            <set field="oldValues[0].opportunityStageId" value="Deleted"/>
            <service-call name="growerp.100.CrmServices100.get#Opportunity"
                in-map="[opportunityId: opportunityIn.opportunityId]" out-map="context"/>
            <entity-update value-field="oldValues[0]"/>
        </actions>
    </service>
</services>