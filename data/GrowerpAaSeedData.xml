    <mantle.product.feature.ProductFeature productFeatureId="SizeMedium" productFeatureTypeEnumId="PftSize" description="Medium" abbrev="MD"/>
    <mantle.product.feature.ProductFeature productFeatureId="SizeLarge" productFeatureTypeEnumId="PftSize" description="Large" abbrev="LG"/>
