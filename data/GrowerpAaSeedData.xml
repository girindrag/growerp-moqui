        <parameters parameterName="daysToKeep" parameterValue="90"/>
    </moqui.service.job.ServiceJob>

    <moqui.service.job.ServiceJob jobName="deactivate_inactive_users_daily" description="scan/remove active users for not using the system"
            serviceName="growerp.mobile.ScheduledJobs.deActivate#InactiveUsers" cronExpression="0 0 3 * * ?" paused="N">
        <parameters parameterName="daysToKeep" parameterValue="90"/>
    </moqui.service.job.ServiceJob-->

    <!-- update seed data -->
    <!--<growerp.InstallServices.deleteAssetClass/> existing classes used in accounting -->
    <moqui.basic.Enumeration description="Hotel Room" enumId="AsClsRoom" enumTypeId="AssetClass"/>
    <moqui.basic.Enumeration description="Restaurant Table" enumId="AsClsTable" enumTypeId="AssetClass"/>
    <moqui.basic.Enumeration description="Restaurant Table Area" enumId="AsClsTableArea" enumTypeId="AssetClass"/>

    <!-- default template Retail Wiki/Content -->
    <moqui.resource.DbResource filename="DEFAULT_ROOT" isFile="N" resourceId="DEFAULT_ROOT" parentResourceId=""/>
    <moqui.resource.DbResource filename="content.html" isFile="Y" resourceId="default_content" parentResourceId="DEFAULT_ROOT">
        <file mimeType="text/html" versionName="01" rootVersionName="01">
            <fileData><![CDATA[<h3>Welcome to Default Retail</h3>]]></fileData>
            <histories versionName="01" versionDate="1485028800000" isDiff="N"/>
        </file>
    </moqui.resource.DbResource>
    <!-- this is the directory to put all site content under -->
    <moqui.resource.DbResource filename="content" isFile="N" resourceId="default_content_dir" parentResourceId="DEFAULT_ROOT"/>
    <!-- default setup for wiki productstore, categories etc -->
    <moqui.resource.wiki.WikiSpace wikiSpaceId="DEFAULT_WS" description="Default Content" restrictView="N" allowAnyHtml="Y"
        rootPageLocation="dbresource://DEFAULT_ROOT" decoratorScreenLocation=""
        publicPageUrl="/content/${pagePath}?ver=${versionName}"
        publicAttachmentUrl="/popc/content/attachment/${wikiPageId}/${filename}"/>
        <moqui.resource.wiki.WikiPage wikiPageId="default_content" wikiSpaceId="DEFAULT_WS" pagePath="">
            <histories historySeqId="01" versionName="01" changeDateTime="1485028800000"/>
    </moqui.resource.wiki.WikiPage>

    <mantle.facility.Facility facilityId="DEFAULT_WH" facilityTypeEnumId="FcTpWarehouse" assetAllowIssueOverQoh="Y"
        ownerPartyId="_NA_" facilityName="Default Warehouse">
    <locations locationTypeEnumId="FltPick" locationSeqId="0001" sequenceNum="1" areaId="01" aisleId="01" sectionId="01" levelId="01" positionId=""/>
    <locations locationTypeEnumId="FltPick" locationSeqId="0002" sequenceNum="2" areaId="01" aisleId="01" sectionId="02" levelId="01" positionId=""/>
    </mantle.facility.Facility>

    <mantle.product.store.ProductStore productStoreId="POPC_DEFAULT" storeName="Default Store"
            organizationPartyId="_NA_" inventoryFacilityId="DEFAULT_WH" reservationOrderEnumId="AsResOrdFifoRec"
            wikiSpaceId="DEFAULT_WS" defaultLocale="en_US" defaultCurrencyUomId="USD" taxGatewayConfigId="LOCAL" requireInventory="Y">
        <shipOptions carrierPartyId="_NA_" shipmentMethodEnumId="ShMthGround" sequenceNum="1"/>
        <shipOptions carrierPartyId="_NA_" shipmentMethodEnumId="ShMthNextDay" sequenceNum="2"/>
        <shipOptions carrierPartyId="_NA_" shipmentMethodEnumId="ShMthPickUp" sequenceNum="3"/>
        <shippingGateways carrierPartyId="_NA_" shippingGatewayConfigId="NA_LOCAL"/>
        <paymentGateways paymentInstrumentEnumId="PiCreditCard" paymentGatewayConfigId="TEST_APPROVE"/>
    </mantle.product.store.ProductStore>

    <!-- ecommerce categories  -->
    <mantle.product.category.ProductCategory productCategoryId="PopcAllProducts" ownerPartyId="_NA_"
        productCategoryTypeEnumId="PctCatalog" categoryName="All Products Category"/>
        
    <mantle.product.category.ProductCategory productCategoryId="PopcDeals" ownerPartyId="_NA_"
        productCategoryTypeEnumId="PctCatalog" categoryName="Deals"/>
    <mantle.product.store.ProductStoreCategory productStoreId="POPC_DEFAULT" productCategoryId="PopcDeals"
        storeCategoryTypeEnumId="PsctPromotions" fromDate="1265184000000" thruDate=""/>
    <mantle.product.category.ProductCategory productCategoryId="PopcNew" ownerPartyId="_NA_"
        productCategoryTypeEnumId="PctCatalog" categoryName="New"
        description="Used on the E-Commerce website, products in this category will appear in the 'new' section"/>
    <mantle.product.store.ProductStoreCategory productStoreId="POPC_DEFAULT" productCategoryId="PopcNew"
        storeCategoryTypeEnumId="PsctNewProducts" fromDate="1265184000000" thruDate=""/>
    <mantle.product.category.ProductCategory productCategoryId="PopcFeatured" ownerPartyId="_NA_"
        productCategoryTypeEnumId="PctCatalog" categoryName="Featured"
        description="Used on the E-Commerce website, products in this category will appear in the 'featured' section"/>
    <mantle.product.store.ProductStoreCategory productStoreId="POPC_DEFAULT" productCategoryId="PopcFeatured"
        storeCategoryTypeEnumId="PsctFeatured" fromDate="1265184000000" thruDate=""/>
    <mantle.product.category.ProductCategory productCategoryId="PopcHome" ownerPartyId="_NA_"
        productCategoryTypeEnumId="PctCatalog" categoryName="Home"
        description="Used on the E-Commerce website, products in this category will appear in the 'home' section"/>
    <mantle.product.store.ProductStoreCategory productStoreId="POPC_DEFAULT" productCategoryId="PopcHome"
        storeCategoryTypeEnumId="PsctHomePage" fromDate="1265184000000" thruDate=""/>
    <mantle.product.category.ProductCategory productCategoryId="PopcBrowseRoot" ownerPartyId="_NA_"
    description="Used on the E-Commerce website, products in this category will appear in the 'root' section"/>
        productCategoryTypeEnumId="PctCatalog" categoryName="Root"/>
    <mantle.product.store.ProductStoreCategory productStoreId="POPC_DEFAULT" productCategoryId="PopcBrowseRoot"
        storeCategoryTypeEnumId="PsctBrowseRoot" fromDate="1265184000000" thruDate=""/>


